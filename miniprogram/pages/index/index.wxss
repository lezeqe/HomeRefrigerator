.tab-header {
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  display: table;
  width: 750rpx;
  height: 80rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.tab-header-item {
  display: table-cell;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.tab-header-item:active {
  background-color: #f8f8f8;
